{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "es5",
    "lib": ["esnext", "DOM"],
    "outDir": "dist",
    "strict": false,
    "module": "CommonJS",
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "./src/pages"],
  "include": ["src/**/*.ts"]
}
